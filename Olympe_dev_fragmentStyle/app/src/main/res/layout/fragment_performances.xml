<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Fragment_performances"
    android:orientation="vertical">


    <TextView
        android:id="@+id/performances_textViewConnexion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/all_messageConnexion"
        android:textSize="20dp"
        android:layout_margin="30dp"
        android:textAlignment="center"
        android:gravity="center"/>

    <RelativeLayout
        android:id="@+id/performances_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp">

        <Spinner
            android:id="@+id/performances_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TableLayout
            android:id="@+id/performances_tableLayout"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/performances_spinner"
            android:stretchColumns="*">
        </TableLayout>

    </RelativeLayout>


</LinearLayout>